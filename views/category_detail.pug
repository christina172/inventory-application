extends layout

block content

  h1 Category: #{category.name}

  div #{category.description}

  div(style='margin-left:20px;margin-top:20px')

    h2 Items

    dl
      each item in category_items
        dt
          a(href=item.url) #{item.full_name}
        dd #{item.description}

      else
        p This category has no items