extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Cellos, Flutes etc.' name='name' required='true' value=(undefined===category ? '' : category.name))
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' required='true') #{undefined===category ? '' : category.description}
    button.btn.btn-primary(type='submit') Submit
    

  if errors
   ul.errors-list
    for error in errors
     li!= error.msg